pragma solidity ^0.8.0;

contract ArrayShift {
        uint [] public arr;

        function example() public {
                arr = [1,2,3] ;
                delete arr[1];
        }

        function remove(uint _index) public {
                require(_index < arr.length,"index out of bound");

                for (uint i = _index; i < arr.length - 1;i++) {
                        arr[i] = arr[i + 1];
                }
        }
}
