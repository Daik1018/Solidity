pragma solidity ^0.8.0;

contract Forandwhileloops {
    function loops() external pure{
    for (uint i = 0; i < 10; i++)
     {
    if (i == 3){
    continue; 
    }
    if (i == 5){
        break;
    }
    }

    uint j = 0;
    while (j < 10) {
        j++;
    }
    }

    function sum(uint _n) external pure returns (uint) {
        uint s;
        for (uint i = 1; i <= _n; i++){
            s += i;
        }
        return s; 
    }
    }
  
    //uint格式，控制变量为i，起始为0，小于10的时候再开始循环，i++代表着每一次循环让自变量增加1就可以
    //智能合约中不能运行无限循环
